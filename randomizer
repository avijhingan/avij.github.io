document.body.appendChild(randomize);

randomize.onclick = function() {
  square.style.transition = 'all 3s';
  square.style.backgroundColor = 'hsl(' + Math.random() * 360 + ', 100%, 50%)';
  square.style.filter = 'brightness(' + Math.random() * 100 + '%)';

  square2.style.transition = 'all 3s';
