  square3.style.filter = 'brightness(' + Math.random() * 100 + '%)';

  square4.style.transition = 'all 3s';
  square4.style.backgroundColor = 'hsl(' + Math.random() * 360 + ', 100%, 50%)';
  square4.style.filter = 'brightness(' + Math.random() * 100 + '%)';
}

square.style.position = 'absolute';
square.style.top = '50%';
square.style.left = '50%';
square.style.transform = 'translate(-50%, -50%)';

square2.style.position = 'absolute';
square2.style.top = '50%';
